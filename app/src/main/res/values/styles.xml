<resources>
    <style name="CustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomStyle.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomStyle.Text.Primary" parent="CustomStyle.Text">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="CustomStyle.Text.Secondary" parent="CustomStyle.Text">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="CustomStyle.Text.Light" parent="CustomStyle.Text.Secondary">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="CustomStyle.Text.Header" parent="CustomStyle.Text.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="CustomStyle.ImageView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="CustomStyle.ImageView.CurrentWeather" parent="CustomStyle.ImageView">
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomStyle.Icon">
        <item name="android:tint">?attr/iconColor</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="CustomStyle.ImageView.Precipitation">
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="CustomStyle.Divider">
        <item name="android:background">?attr/sectionDividerColor</item>
    </style>

    <style name="CustomStyle.Divider.Thick.Horizontal" parent="CustomStyle.Divider">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomStyle.Divider.Thick.Vertical" parent="CustomStyle.Divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">12dp</item>
    </style>

    <style name="CustomStyle.Divider.Thin.Horizontal" parent="CustomStyle.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomStyle.Divider.Thin.Vertical" parent="CustomStyle.Divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="CustomStyle.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CustomStyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomStyle.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="CustomStyle.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="android:colorControlNormal">?attr/iconColor</item>
    </style>

    <style name="CustomStyle.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_app_bar_height</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
